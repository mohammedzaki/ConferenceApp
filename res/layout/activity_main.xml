<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_layout_main_bg"
    android:orientation="vertical"
    tools:context="com.eye_egypt.conferenceapp.notifications.notifications.activities.MainActivity"
    tools:ignore="MergeRootFrame" >

    <ImageView
        android:id="@+id/imageView03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_layout_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="309dp"
            android:layout_height="670dp"
            android:background="@drawable/main_layout_left_slider_bg"
            android:orientation="vertical" >

            <AbsoluteLayout
                android:id="@+id/AbsoluteLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" >

                <ImageView
                    android:id="@+id/newsImageViewbg"
                    android:layout_width="211dp"
                    android:layout_height="256dp"
                    android:layout_x="22dp"
                    android:layout_y="42dp"
                    android:background="@drawable/main_layout_account_image_box" />
            </AbsoluteLayout>

            <Button
                android:id="@+id/btn_Calender"
                android:layout_width="153dp"
                android:layout_height="42dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/main_layout_btn_calender" />

            <Button
                android:id="@+id/btn_Notes"
                android:layout_width="153dp"
                android:layout_height="42dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/main_layout_btn_notes" />

            <Button
                android:id="@+id/btn_Reminder"
                android:layout_width="153dp"
                android:layout_height="42dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/main_layout_btn_reminder" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="100dp" >

                <Button
                    android:id="@+id/btn_logout"
                    android:layout_width="52dp"
                    android:layout_height="21dp"
                    android:layout_gravity="center_vertical"
                    android:text="Logout" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_layout_btnseparator" />

                <Button
                    android:id="@+id/btn_help"
                    android:layout_width="36dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:text="Help" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/header"
                android:layout_width="fill_parent"
                android:layout_height="61dp"
                android:background="@drawable/main_menu_bg" >

                <Button
                    android:id="@+id/btn_News"
                    style="@style/main_menu_btns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.05"
                    android:text="News"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/btn_Announcements"
                    style="@style/main_menu_btns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.05"
                    android:text="Announcements" />

                <Button
                    android:id="@+id/btn_Notifications"
                    style="@style/main_menu_btns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.05"
                    android:text="Notifications" />

                <Button
                    android:id="@+id/btn_Presentation"
                    style="@style/main_menu_btns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.05"
                    android:text="Presentation" />

                <Button
                    android:id="@+id/btn_VotingSystem"
                    style="@style/main_menu_btns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.05"
                    android:text="Voting System" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/main_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>