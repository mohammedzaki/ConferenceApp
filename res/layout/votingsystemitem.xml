<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="269dp" >

    <LinearLayout
        android:id="@+id/newsItem"
        android:layout_width="664dp"
        android:layout_height="138dp"
        android:background="@drawable/blue_bg" >

        <LinearLayout
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/newsImageViewbg"
                android:layout_width="86dp"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/news_layout_image_box" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/NewsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Subject"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/NewsContent"
                android:layout_width="375dp"
                android:layout_height="match_parent"
                android:text="Text here text here text here text here text here text here text here text here text here text here
text here text here text here text here text here text here text here text ."
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:typeface="sans" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/LinearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:orientation="vertical" >

                <RatingBar
                    android:id="@+id/RatingBar01"
                    style="@style/newsRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Total vote: 20"
                    android:textAlignment="center"
                    android:textColor="@color/todayEventsBtns" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</merge>