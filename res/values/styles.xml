<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
			Theme customizations available in newer API levels can go in
        	res/values-vXX/styles.xml, while customizations related to
        	backward-compatibility can go here.
        -->
    </style>

    <style name="DownloadPeresntationScreen" parent="@android:style/Theme.Dialog">
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>
    <!-- Application theme. -->

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="newsRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/news_ratingbar</item>
        <item name="android:minHeight">24dip</item>
        <item name="android:maxHeight">24dip</item>
    </style>

    <style name="sub_menu_announcements_btns" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/sub_menu_announcements_btns_bg</item>
        <item name="android:textColor">#67C9A2</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="main_menu_btns" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/main_menu_btns_bg</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:height">61dp</item>
    </style>

    <style name="todayEvents_btns" parent="@android:style/Widget.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/todayEventsBtns</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableRight">@drawable/today_events_layout_btns_separator</item>
    </style>

    <style name="mainLayout_btns" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/main_layout_btns_bg</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableRight">@drawable/today_events_layout_btns_separator</item>
    </style>

</resources>